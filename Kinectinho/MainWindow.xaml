<Window x:Class="Kinectinho.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kinectinho"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.433,0.49">
        <Grid.ColumnDefinitions>
            <ColumnDefinition	Width="67*"/>
            <ColumnDefinition	Width="99*"/>
            <ColumnDefinition	Width="859*"/>
            <ColumnDefinition	Width="167*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="94*" />
            <RowDefinition Height="26" />
            <RowDefinition Height="249*" />
            <RowDefinition Height="50*" />
        </Grid.RowDefinitions>

        <Label FontSize="20" Content="Ajuste Angulo" Grid.Column="0" Grid.ColumnSpan="2"
               HorizontalContentAlignment="Center" Margin="0,59,0,22" Grid.RowSpan="2"/>

        <Slider	Name="slider"
                Margin="23,10,0,89"
                Height="150"
                HorizontalAlignment="Left"	
                VerticalAlignment="Center"
                Orientation="Vertical"
                Minimum="-27"	
                Maximum="27"				
                Value="0"	
                Grid.Column="0"	Grid.Row="2"
                
                Thumb.DragCompleted="slider_DragCompleted" 
                Width="18"/>


        <Label	Name="label"
                FontSize="64"					
                FontFamily="Segoe	UI	Light"					
                HorizontalAlignment="Left"	
                VerticalAlignment="Top"					
                Content="0"	
                Grid.Column="1" Grid.Row="2"
                Height="96" Margin="1,28,0,0" Width="83" Grid.ColumnSpan="2"	/>

        <Canvas Name="esqueletobugado" 
                HorizontalAlignment="Left" 
                Margin="10,10,0,10" 
                Width="866"  
                Grid.Column="2"
                Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" />
        <Label Content="Regras para Cumprir" Grid.Column="3" HorizontalAlignment="Center" Width="167" FontWeight="Bold" FontSize="14" RenderTransformOrigin="0.503,-0.538" Margin="0,78,0,10" Grid.RowSpan="2"/>
        <StackPanel Grid.Column="3" HorizontalAlignment="Left" Height="249" Grid.Row="2" VerticalAlignment="Top" Width="167">
            <Label x:Name="lblMaoDireita" Content="Mão Direita Pra Cima" HorizontalAlignment="Center" Background="#FFE60C0C" Margin="10,0" Width="147"/>
            <Label x:Name="lblMaoEsquerda" Content="Mão Esquerda Pra Cima" HorizontalAlignment="Center" Background="#FFE60C0C" Margin="10,0" Width="147"/>
            <Label x:Name="lblMaoDireita_Baixo" Content="Mão Direita Pra Baixo" Background="#FFE60C0C" Width="147"/>
            <Label x:Name="lblMaoEsquerda_Baixo" Content="Mão Esquerda Pra Baixo" Background="#FFE60C0C" Width="147"/>
        </StackPanel>


    </Grid>
</Window>
