        <Image x:Name="Danca"  HorizontalAlignment="Center" Height="383" VerticalAlignment="Top" Width="516" Source="Imagens/1.jpg" Margin="0,153,0,0"/>
        <Button Content="Voltar ao Menu" x:Name="Voltar" HorizontalAlignment="Left" Margin="36,627,0,0" VerticalAlignment="Top" Height="48" Width="157" FontSize="20"  Background="Transparent" BorderBrush="Transparent" Click="Voltar_Click"/>
        <Button Content="Jogar" x:Name="Jogar" HorizontalAlignment="Center" Margin="0,554,0,0" VerticalAlignment="Top" Height="48" Width="156" FontSize="20"  Background="Transparent" BorderBrush="Transparent" Click="Jogar_Click"/>
    </Grid>


</Window>
